.page-home {
  padding-top: 100rpx;
}
.page-home .page-home-vscroll {
  position: fixed;
  top: 0rpx;
  left: 0;
  z-index: 10;
  height: 100rpx;
  white-space: nowrap;
  background: #457bbe;
}
.page-home .page-home-vscroll.fixed-top {
  top: 43px;
}
.page-home .page-home-vscroll ::-webkit-scrollbar {
  width: 0;
  height: 0;
  background-color: transparent;
}
.page-home .page-home-vscroll .page-home-vscroll-item {
  position: relative;
  display: inline-block;
  height: 100%;
  width: 20%;
  text-align: center;
  line-height: 100rpx;
  margin-right: 20rpx;
  color: #fff;
}
.page-home .page-home-vscroll .page-home-vscroll-item .page-home-vscroll-text {
  display: inline-block;
  height: 100%;
}
.page-home .is-active .page-home-vscroll-text {
  font-weight: bold;
}
.page-home .is-active .page-home-vscroll-text:after {
  position: absolute;
  left: 50%;
  bottom: 0;
  -webkit-transform: translateX(-50%);
      -ms-transform: translateX(-50%);
          transform: translateX(-50%);
  content: '';
  height: 6rpx;
  width: 60rpx;
  background: #fff;
  -webkit-transition: all 0.5s ease-in-out;
  -o-transition: all 0.5s ease-in-out;
  transition: all 0.5s ease-in-out;
}

