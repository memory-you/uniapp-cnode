          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  height: 100%;
}
.page-login-logo {
  width: 252rpx;
  height: 58rpx;
  margin: 0 auto;
}
.page-login-logo image {
  width: 100%;
  height: 100%;
}
.page-login-form {
  padding-top: 100rpx;
}
.page-login-input {
  position: relative;
  width: 500rpx;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 76rpx;
  text-align: center;
  background-color: #ffffff;
  margin: 0 auto;
}
.page-login-input input {
  height: 76rpx;
  line-height: 76rpx;
  font-size: 34rpx;
  width: 450rpx;
  margin: 0 auto;
}
.page-login-input .saoma {
  position: absolute;
  right: 0;
  top: 0;
  z-index: 9;
