      -ms-flex-pack: center;
          justify-content: center;
  height: 76rpx;
  width: 76rpx;
}
.page-login-input .saoma .iconfont {
  line-height: 76rpx;
}
.page-login-btn {
  width: 500rpx;
  height: 76rpx;
  margin-top: 36rpx;
  line-height: 76rpx;
  border-radius: 76rpx;
  color: #fff;
  font-size: 34rpx;
  background-color: #15539f;
}
.page-login-footer {
  position: absolute;
  left: 30rpx;
  bottom: 30rpx;
  right: 30rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}
.page-login-footer text {
  display: block;
  text-align: center;
}

